# Server
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:3000

# Mongo
MONGODB_URI=mongodb://localhost:27017/carhire

# Auth
JWT_ACCESS_SECRET=change_me_access
JWT_REFRESH_SECRET=change_me_refresh
JWT_ACCESS_TTL_SECONDS=900
JWT_REFRESH_TTL_SECONDS=2592000

# Field encryption (32-byte base64)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY_BASE64=change_me_32bytes_base64

# Tracking retention / health
TRACKING_HISTORY_TTL_DAYS=7
TRACKER_OFFLINE_AFTER_SECONDS=180

# Traccar (Mode 1 hub)
TRACCAR_BASE_URL=http://localhost:8082
TRACCAR_USERNAME=admin
TRACCAR_PASSWORD=change_me
TRACCAR_FORWARD_HOST=your-vps.example.com
TRACCAR_WIALON_IPS_PORT=5003

# Background jobs (run inside the API process)
ENABLE_BACKGROUND_JOBS=false
TRACCAR_SYNC_INTERVAL_SECONDS=5
WIALON_POLL_INTERVAL_SECONDS=15

